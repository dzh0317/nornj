{
  "name": "nornj-build",
  "private": true,
  "workspaces": [
    "packages/nornj",
    "packages/nornj-react",
    "packages/nornj-loader",
    "packages/babel-plugin-nornj-in-jsx"
  ],
  "version": "1.0.0",
  "description": "A powerful template engine that can works with React, JSX enhancement or alternative tools.",
  "scripts": {
    "build": "lerna run build",
    "lint": "yarn run lint:nj & yarn run lint:njr & yarn run lint:njl & yarn run lint:njx",
    "lint:nj": "eslint packages/nornj --ext .js,.jsx,.ts,.tsx",
    "lint:njr": "eslint packages/nornj-react --ext .js,.jsx,.ts,.tsx",
    "lint:njl": "eslint packages/nornj-loader --ext .js,.jsx,.ts,.tsx",
    "lint:njx": "eslint packages/babel-plugin-nornj-in-jsx --ext .js,.jsx,.ts,.tsx",
    "format": "yarn run format:nj & yarn run format:njr & yarn run format:njl & yarn run format:njx",
    "format:nj": "prettier-eslint --write packages/nornj/**/*.{js,jsx,ts,tsx}",
    "format:njr": "prettier-eslint --write packages/nornj-react/**/*.{js,jsx,ts,tsx}",
    "format:njl": "prettier-eslint --write packages/nornj-loader/**/*.{js,jsx,ts,tsx}",
    "format:njx": "prettier-eslint --write packages/babel-plugin-nornj-in-jsx/**/*.{js,jsx,ts,tsx}",
    "type-check": "tsc --noEmit",
    "test": "jest --config=test/jest.config.js",
    "test:njx": "lerna run --scope babel-plugin-nornj-in-jsx test",
    "cover": "jest --coverage --config=test/jest.config.js",
    "cover:njx": "lerna run --scope babel-plugin-nornj-in-jsx cover",
    "ci": "yarn run cover && codecov test/coverage/coverage-final.json",
    "ci:njx": "lerna run --scope babel-plugin-nornj-in-jsx ci",
    "release": "lerna publish",
    "release:next": "lerna publish --dist-tag next"
  },
  "keywords": [
    "nornj",
    "nj",
    "template",
    "react",
    "jsx",
    "babel"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/joe-sky/nornj.git"
  },
  "bugs": {
    "url": "https://github.com/joe-sky/nornj/issues"
  },
  "author": "Joe_Sky <hitomi_doax@sina.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "@babel/plugin-external-helpers": "^7.2.0",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-decorators": "^7.6.0",
    "@babel/polyfill": "^7.4.0",
    "@babel/preset-env": "^7.3.4",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@babel/register": "^7.0.0",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@types/chai": "^4.2.4",
    "@types/enzyme": "^3.10.3",
    "@types/jest": "^24.0.22",
    "@typescript-eslint/eslint-plugin": "^2.5.0",
    "@typescript-eslint/parser": "^2.5.0",
    "codecov": "^3.0.0",
    "commitlint": "^8.2.0",
    "create-react-class": "^15.6.3",
    "cross-env": "^5.1.0",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.11.2",
    "eslint": "^6.5.1",
    "eslint-plugin-react": "^7.8.2",
    "husky": "^3.0.9",
    "jest": "^24.5.0",
    "jest-css-modules-transform": "^2.1.1",
    "jest-environment-enzyme": "^7.0.2",
    "jest-enzyme": "^7.0.2",
    "lerna": "^3.18.3",
    "lint-staged": "^9.4.2",
    "lodash": "^4.13.1",
    "prettier": "^1.18.2",
    "prettier-eslint": "^9.0.0",
    "prettier-eslint-cli": "^5.0.0",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "rollup": "^1.26.3",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-filesize": "^6.0.1",
    "rollup-plugin-license": "^0.8.1",
    "rollup-plugin-node-resolve": "^5.0.2",
    "rollup-plugin-replace": "^2.1.0",
    "rollup-plugin-uglify": "^6.0.2",
    "typescript": "^3.7.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "packages/{nornj,nornj-react,nornj-loader,babel-plugin-nornj-in-jsx}/**/*.{js,jsx,ts,tsx}": [
      "prettier-eslint --write",
      "git add"
    ]
  }
}
